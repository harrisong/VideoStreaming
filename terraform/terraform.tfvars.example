# Terraform Variables Configuration
# Copy this file to terraform.tfvars and update with your values

# Cloud provider selection (hetzner, digitalocean, vultr, linode)
cloud_provider = "hetzner"

# Domain configuration
domain_name = "yourdomain.com"

# Environment
environment = "prod"

# Server configuration
server_count = 1
server_size  = "small"  # small, medium, large

# Features
enable_load_balancer = false
enable_monitoring    = false

# SSH public key (paste your public key here)
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQC... your-public-key-here"

# Backup retention
backup_retention_days = 7

# Provider-specific settings (uncomment as needed)

# Hetzner Cloud
# Set via environment variable: export HCLOUD_TOKEN="your-token"

# DigitalOcean
# Set via environment variable: export DIGITALOCEAN_TOKEN="your-token"

# Vultr
# Set via environment variable: export VULTR_API_KEY="your-api-key"

# Linode
# Set via environment variable: export LINODE_TOKEN="your-token"

# Cloudflare (optional, for DNS management)
# Set via environment variable: export CLOUDFLARE_API_TOKEN="your-token"
